<h1><a href='/budgets/<%= @budget.id %>/edit'><%= @budget.name %></a> Purchases</h1>

<% purchases_by_date.each do |p| %>
  <% if p.budget_id == @budget.id %>
    <p>$<a href='/purchases/<%= p.id %>/edit'><%= p.amount %>     <%= p.date %></a></p>
  <% end %>
<% end %>
<p>Remainder in <%= @budget.name %> Budget: <b>$<%= remaining_balance %></b></p>
<a href=/purchases/<%= @budget.id %>/new>Log a Purchase</a>
<br><br>
<a href=/budgets>Back to all budgets</a>
